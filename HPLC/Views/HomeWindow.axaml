<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HPLC.ViewModels"
             x:Class="HPLC.Views.HomeWindow"
             x:DataType="vm:MainViewModel">
    <StackPanel>
        <StackPanel>
            <Image Margin="20 100 20 0" Height="250" Width="250" Source="avares://HPLC/Assets/logo.png" />
            <TextBlock Text="Chromalyse" TextAlignment="Center" FontSize="50"></TextBlock>
        </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="60 30">
                <Button Command="{Binding SelectFileCommand}"
                        Content="Select File"
                        FontSize="25"
                        Background="Purple"
                        Foreground="White"
                        FontWeight="UltraLight"
                        HorizontalAlignment="Center"
                        Margin="10 20"
                        Cursor="Hand"/>
            </StackPanel>
    </StackPanel>
</UserControl>