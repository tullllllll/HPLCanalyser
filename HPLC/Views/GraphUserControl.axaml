<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HPLC.Views.GraphUserControl"
             xmlns:ViewModels="clr-namespace:HPLC.ViewModels"
             x:DataType="ViewModels:GraphUserControlViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        
        <Expander Grid.Row="0" Grid.Column="0" ExpandDirection="Right" VerticalAlignment="Stretch">
            <Expander.Header>
                <TextBlock Text="DataGrid" 
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                    <TextBlock.RenderTransform>
                        <RotateTransform Angle="-90"/> 
                    </TextBlock.RenderTransform>
                </TextBlock>
            </Expander.Header>
            
            
            <DataGrid ItemsSource="{Binding ObservableValues}"
                      AutoGenerateColumns="False" IsReadOnly="False"
                      GridLinesVisibility="All"
                      BorderThickness="1" BorderBrush="Gray"
            >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="X" Binding="{Binding X}" />
                    <DataGridTextColumn Header="Y" Binding="{Binding Y}" />
                </DataGrid.Columns>
            </DataGrid>
        </Expander>
        
        
        
        
        <lvc:CartesianChart Series="{Binding SeriesCollection}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}"
                            ZoomMode="Y"
                            TooltipPosition="Hidden"
                            Grid.Row="0" Grid.Column="1"/>
        
    </Grid>
</UserControl>