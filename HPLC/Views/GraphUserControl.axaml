<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HPLC.Views.GraphUserControl"
             xmlns:ViewModels="clr-namespace:HPLC.ViewModels"
             x:DataType="ViewModels:GraphUserControlViewModel"
             >
    
 
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Content="Knop 1" Grid.Row="0" Grid.Column="0" Margin="5" Command="{Binding AddItemCommand}"/>

        <!-- Tweede rij: CartesianChart -->
        <lvc:CartesianChart Series="{Binding SeriesCollection}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}"
                            ZoomMode="Y"
                            TooltipPosition="Hidden"
                            Grid.Row="1" Grid.Column="0"/>
    </Grid>
    
</UserControl>
