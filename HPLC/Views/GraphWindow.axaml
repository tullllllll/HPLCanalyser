<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HPLC.ViewModels"
             x:Class="HPLC.Views.GraphWindow"
             x:DataType="vm:MainViewModel">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" x:Name="DataSetViewer">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            
            <ScrollViewer Grid.Row="0">
            </ScrollViewer>
            
            <Button Grid.Row="1" 
                    Command="{Binding UploadFileCommand}"
                    VerticalAlignment="Bottom"
                    Content="Upload File"
                    FontSize="25"
                    Background="Purple"
                    Foreground="White"
                    FontWeight="UltraLight"
                    Width="200"
                    Cursor="Hand"/>
        </Grid>
        
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>
            
            <Border Grid.Row="0" BorderBrush="Transparent" BorderThickness="0" x:Name="MainGraph">
                <Button Command="{Binding NavigateCommand}" 
                        CommandParameter="Home"
                        Content="Back to Home"
                        FontSize="25"
                        Background="Purple"
                        Foreground="White"
                        FontWeight="UltraLight"
                        HorizontalAlignment="Center"
                        Margin="10 20"
                        Cursor="Hand"/>
            </Border>
            
            <DataGrid Grid.Row="1" x:Name="VariableTable" 
                      ItemsSource="{Binding DataSet.DataPoints}"
                      AutoGenerateColumns="True" IsReadOnly="True"
                      GridLinesVisibility="All" 
                      BorderThickness="1" BorderBrush="Gray">
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
