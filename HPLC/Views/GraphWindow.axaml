<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:HPLC.ViewModels"
             xmlns:views="clr-namespace:HPLC.Views"
             x:Class="HPLC.Views.GraphWindow"
             x:DataType="vm:MainViewModel">
        
        <Grid>
            <views:GraphUserControl Grid.Row="0" DataContext="{Binding GraphViewModel}" Margin="0,0,0,50"/>
            
            <Expander Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" MinHeight="50" MaxHeight="500" ZIndex="10">
                <Expander.Header>
                    Lijn data
                </Expander.Header>
                <TabControl>
                    <TabItem Header="Hoofdlijn">
                        <StackPanel>
                            <Button Command="{Binding SelectFileCommand}"
                                    CommandParameter="main"
                                    Content="Select File"
                                    FontSize="25"
                                    Background="Purple"
                                    Foreground="White"
                                    FontWeight="UltraLight"
                                    HorizontalAlignment="Center"
                                    Margin="10 20"
                                    Cursor="Hand"/>
                            <DataGrid ItemsSource="{Binding DataSet.DataPoints}"
                                      IsReadOnly="True"
                                      CanUserReorderColumns="True"
                                      CanUserResizeColumns="True"
                                      GridLinesVisibility="All" 
                                      BorderThickness="1" BorderBrush="Gray">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time"  Binding="{Binding Time}"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value, StringFormat=F2}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Referentielijn">
                        <StackPanel>
                            <Button Command="{Binding SelectFileCommand}"
                                    CommandParameter="reference"
                                    Content="Select File"
                                    FontSize="25"
                                    Background="Purple"
                                    Foreground="White"
                                    FontWeight="UltraLight"
                                    HorizontalAlignment="Center"
                                    Margin="10 20"
                                    Cursor="Hand"/>
                            <DataGrid ItemsSource="{Binding ReferenceDataSet.DataPoints}"
                                      IsReadOnly="True"
                                      CanUserReorderColumns="True"
                                      CanUserResizeColumns="True"
                                      GridLinesVisibility="All" 
                                      BorderThickness="1" BorderBrush="Gray">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time"  Binding="{Binding Time}"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value, StringFormat=F2}" />
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Expander>
        </Grid>
</UserControl>
