<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HLPC.Views"
        xmlns:viewModels="clr-namespace:HLPC.ViewModels"
        mc:Ignorable="d"
        d:DesignWidth="1920" d:DesignHeight="1080"
        x:Class="HLPC.Views.MainWindow"
        Title="HLPC"
        x:DataType="viewModels:MainViewModel">

    <StackPanel>
        <StackPanel>
            <Image Margin="20 10 20 0" Height="300" Width="300" Source="avares://HLPC/Assets/logo.png" />
            <TextBlock Text="HLPC Data Analyser" TextAlignment="Center" FontSize="50"></TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="60">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" FontSize="25" Text="Recent DataSets"></TextBlock>
                <ItemsControl ItemsSource="{Binding RecentDataSets}" Margin="20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"></StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Padding="10" Margin="5">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Date_Added}" HorizontalAlignment="Center"/>
                                    <TextBlock Text="{Binding Machine_Type}" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button Command="{Binding UploadFileCommand}"
                        Content="{Binding UploadFile}"
                        FontSize="25"
                        Background="Purple"
                        Foreground="White"
                        FontWeight="UltraLight"
                        HorizontalAlignment="Center"
                        Margin="10 20"/>
                <Button Content="More recent DataSets"
                        FontSize="25"
                        Background="Purple"
                        Foreground="White"
                        FontWeight="UltraLight"
                        HorizontalAlignment="Center"
                        Margin="10 20"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>

</Window>